{
  "info": {
    "name": "Tournament API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"username\": \"your_username\", \"password\": \"your_password\" }"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/logout",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Tournaments",
      "item": [
        {
          "name": "Get All Tournaments",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/tournaments"
          }
        },
        {
          "name": "Create Tournament",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/tournaments",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"Tournament Name\" }"
            }
          }
        },
        {
          "name": "Update Tournament",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/api/tournaments/{{tournamentID}}",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"Updated Tournament Name\" }"
            }
          }
        },
        {
          "name": "Delete Tournament",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/api/tournaments/{{tournamentID}}"
          }
        }
      ]
    },
    {
      "name": "Team Management in Tournament",
      "item": [
        {
          "name": "Get All Teams in Tournament",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/tournaments/{{tournamentID}}/teams"
          }
        },
        {
          "name": "Create Team in Tournament",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/tournaments/{{tournamentID}}/teams",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"teamID\": \"123\" }"
            }
          }
        },
        {
          "name": "Delete Team from Tournament",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/api/tournaments/{{tournamentID}}/teams/{{teamID}}"
          }
        }
      ]
    },
    {
      "name": "Match Management in Tournament",
      "item": [
        {
          "name": "Get All Matches for a Team in Tournament",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/tournaments/{{tournamentID}}/teams/{{teamID}}/matches"
          }
        },
        {
          "name": "Create Match for a Team in Tournament",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/tournaments/{{tournamentID}}/teams/{{teamID}}/matches",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"week\": 1, \"day\": \"Monday\", \"date\": \"2024-10-08\", \"time\": \"16:00\" }"
            }
          }
        },
        {
          "name": "Update Match in Tournament",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/api/matches/{{matchID}}",
            "header": [
              {
                "key": "Content-Type",
